<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="baseapp.freitech.com.myapplication2.MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="timerView"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/timeText"
                tools:text="00:00:00" android:textSize="60px"
                tools:layout_editor_absoluteY="112dp" tools:layout_editor_absoluteX="122dp"/>
        <Button
                android:text="start"
                android:layout_width="match_parent"
                android:layout_height="43dp" tools:layout_editor_absoluteY="234dp"
                tools:layout_editor_absoluteX="20dp" android:id="@+id/startBtn" android:visibility="visible"/>
        <Button
                android:text="stop"
                android:layout_width="match_parent"
                android:layout_height="38dp" tools:layout_editor_absoluteY="236dp"
                android:id="@+id/stopBtn"
                android:visibility="visible" tools:layout_editor_absoluteX="145dp"/>
        <Button
                android:text="reset"
                android:layout_width="match_parent"
                android:layout_height="38dp" tools:layout_editor_absoluteY="236dp"
                android:id="@+id/resetBtn" android:visibility="visible"
                tools:layout_editor_absoluteX="265dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
